<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"
                android:width="50dip"
                android:height="50dip" />
            <corners android:radius="3dp">

            </corners>

        </shape>
    </item>
