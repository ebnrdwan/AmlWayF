<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.amlway2.logic.MainActivity">

    <AutoCompleteTextView
        android:id="@+id/customer"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/backcustomer"
        android:ems="10"
        android:hint="customer name" />

    <AutoCompleteTextView
        android:id="@+id/element"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/backcustomer"
        android:ems="12"
        android:hint="the element"
        android:layout_below="@+id/customer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

<EditText
    android:id="@+id/quantity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="quantity"
    android:background="@drawable/edittextbox"
    android:layout_marginRight="79dp"
    android:layout_marginEnd="79dp"
    android:layout_alignBaseline="@+id/weight"
    android:layout_alignBottom="@+id/weight"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:hint="test test"/>
    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="weight"
        android:background="@drawable/edittextbox"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/element"
        android:layout_toLeftOf="@+id/quantity"
        android:layout_toStartOf="@+id/quantity"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:hint="test test"/>
    <EditText
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:background="@drawable/edittextbox"
        android:layout_marginTop="57dp"
        android:hint="test test"
        android:layout_below="@+id/quantity"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/price"
        android:layout_alignRight="@+id/price"
        android:layout_below="@+id/price"
        android:layout_marginTop="79dp"
        android:text="Add" />


</RelativeLayout>
